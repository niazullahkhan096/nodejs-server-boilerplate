# Application
NODE_ENV=development
PORT=4000

# Database
MONGO_URI=mongodb://localhost:27017/app

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT
JWT_ACCESS_SECRET=change-me-to-a-secure-secret-key
JWT_REFRESH_SECRET=change-me-too-to-a-secure-secret-key
JWT_ACCESS_EXP=15m
JWT_REFRESH_EXP=7d

# Cookies
USE_COOKIES=false
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Database Seeding
ALLOW_DB_SEED=false
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
DEFAULT_LANGUAGE=en
